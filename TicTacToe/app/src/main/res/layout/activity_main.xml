<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pnine"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_start"
        android:layout_width="240dp"
        android:layout_height="78dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="casual"
        android:onClick="to_level"
        android:shadowColor="#000000"
        android:text="@string/start"
        android:textAlignment="center"
        android:textColor="@color/verydarkblue"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree" />

    <ImageView
        android:id="@+id/xo_logo"
        android:layout_width="376dp"
        android:layout_height="538dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/xo1" />

    <TextView
        android:id="@+id/ttt1"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="casual"
        android:shadowColor="#000000"
        android:text="@string/tic_tac_toe"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textColorHighlight="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/xo_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />

    <TextView
        android:id="@+id/ttt2"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="casual"
        android:shadowColor="#000000"
        android:text="@string/tic_tac_toe"
        android:textAlignment="center"
        android:textColor="@color/verydarkblue"
        android:textColorHighlight="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/xo_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748" />

    <ImageView
        android:id="@+id/tree"
        android:layout_width="320dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/xo_logo"
        app:layout_constraintEnd_toEndOf="@+id/xo_logo"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/xo_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868"
        app:srcCompat="@drawable/oyy" />

    <ImageView
        android:id="@+id/yeah"
        android:layout_width="450dp"
        android:layout_height="206dp"
        android:layout_marginBottom="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613"
        app:srcCompat="@drawable/ott" />

</androidx.constraintlayout.widget.ConstraintLayout>